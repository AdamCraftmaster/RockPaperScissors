<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.adamcraftmaster.rockpaperscissors.RpsController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <Label layoutX="273.0" layoutY="31.0" text="Choose an Action" />
            <ButtonBar layoutX="185.0" layoutY="167.0" prefHeight="40.0" prefWidth="257.0">
              <buttons>
                <Button fx:id="rock" alignment="CENTER" mnemonicParsing="false" onAction="#onRockSelected" text="Rock" translateX="-11.0" />
                  <Button fx:id="paper" alignment="CENTER" layoutX="135.0" layoutY="17.0" mnemonicParsing="false" onAction="#onPaperSelected" text="Paper" translateX="-11.0" />
                  <Button fx:id="scissors" alignment="CENTER" layoutX="48.0" layoutY="17.0" mnemonicParsing="false" onAction="#onScissorsSelected" text="Scissors" translateX="-11.0" />
              </buttons>
            </ButtonBar>
            <Label fx:id="status" alignment="CENTER" contentDisplay="CENTER" layoutX="89.0" layoutY="281.0" prefHeight="40.0" prefWidth="458.0" />
      </children>
    </AnchorPane>
  </children>
</VBox>
